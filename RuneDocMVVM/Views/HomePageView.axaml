<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RuneDocMVVM.Views.HomePageView">
    <UserControl.Styles>
        <!-- Define a fade-in animation -->
        <Style Selector="Image#BackgroundImage">
            <Setter Property="Opacity" Value="100"/>
        </Style>
    </UserControl.Styles>
    
    <StackPanel Margin="15, 15" Orientation="Horizontal" Spacing="10" VerticalAlignment="Top">
        <Button Click="Connect" ToolTip.Placement="Bottom">
            Connect to client
            <ToolTip.Tip>
                <StackPanel>
                    <TextBlock FontSize="16">Connection</TextBlock>
                    <TextBlock>This shit is incredibly jank.</TextBlock>
                </StackPanel>
            </ToolTip.Tip>
        </Button>
    </StackPanel>
</UserControl>
