<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RuneDocMVVM.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:DebugPageViewModel"
             x:Class="RuneDocMVVM.Views.DebugPageView">
    <StackPanel Margin="15, 15" Spacing="5">
        <Label Content="Red"></Label>
        <Slider Value="{Binding Red}" Minimum="1045353216" Maximum="1065353216" Width="125" HorizontalAlignment="Left"></Slider>
        <Label Content="Green"></Label>
        <Slider Value="{Binding Green}" Minimum="1045353216" Maximum="1065353216" Width="125" HorizontalAlignment="Left"></Slider>
        <Label Content="Blue"></Label>
        <Slider Value="{Binding Blue}" Minimum="1045353216" Maximum="1065353216" Width="125" HorizontalAlignment="Left"></Slider>
        <Button Click="ApplySilhouetteColours">Apply</Button>
    </StackPanel>
</UserControl>
